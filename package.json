{
  "name": "nestjs-asyncapi",
  "version": "0.3.5",
  "description": "NestJS AsyncAPI module - generate the documentation of your event-based services using decorators",
  "author": "Ilya Moroz",
  "license": "MIT",
  "main": "./dist/lib/index.js",
  "types": "./dist/lib/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/flamewow/nestjs-asyncapi"
  },
  "validate-branch-name": {
    "pattern": "^(main|develop){1}$|^(feat|fix|release|test|refactor|docs|perf|style|chore)/.+$",
    "errorMsg": "The branch name isn't valid."
  },
  "keywords": [
    "asyncapi",
    "nest",
    "nestjs",
    "swagger",
    "openapi",
    "documentation",
    "socket.io",
    "websockets",
    "pubsub",
    "microservices"
  ],
  "peerDependencies": {
    "@nestjs/common": "^9.0.3",
    "@nestjs/core": "^9.0.3",
    "@nestjs/swagger": "^6.0.4"
  },
  "dependencies": {
    "@asyncapi/generator": "1.9.11",
    "@asyncapi/html-template": "0.25.2",
    "js-yaml": "4.1.0",
    "reflect-metadata": "0.1.13"
  },
  "devDependencies": {
    "@nestjs/cli": "9.1.4",
    "@nestjs/platform-express": "9.1.2",
    "@nestjs/platform-fastify": "9.1.2",
    "@nestjs/platform-socket.io": "9.1.2",
    "@nestjs/schematics": "9.0.3",
    "@nestjs/testing": "9.1.2",
    "@nestjs/websockets": "9.1.2",
    "@types/express": "4.17.14",
    "@types/jest": "29.0.3",
    "@types/js-yaml": "4.0.5",
    "@types/node": "16.11.58",
    "@types/supertest": "2.0.12",
    "@types/url-join": "4.0.1",
    "@typescript-eslint/eslint-plugin": "5.38.0",
    "@typescript-eslint/parser": "5.38.0",
    "eslint": "8.24.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-prettier": "4.2.1",
    "husky": "8.0.1",
    "jest": "29.1.1",
    "lint-staged": "13.0.3",
    "prettier": "2.7.1",
    "release-it": "15.4.2",
    "socket.io": "4.5.2",
    "socket.io-client": "4.5.2",
    "supertest": "6.2.4",
    "ts-jest": "29.0.3",
    "ts-loader": "9.4.1",
    "ts-node": "10.9.1",
    "tsconfig-paths": "4.1.0",
    "typescript": "4.3.5"
  },
  "config": {
    "puppeteer_skip_chromium_download": true
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint --cache --fix"
    ]
  },
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig.build.json",
    "prepare": "husky install",
    "format": "prettier --write \"lib/**/*.{js,ts,json}\"  \"e2e/**/*.{js,ts,json}\"",
    "lint": "eslint --fix \"lib/**/*.{js,ts}\"  \"e2e/**/*.{js,ts}\"",
    "pre-commit": "lint-staged",
    "prestart": "npm install && npm run build",
    "---execution---": "",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --watch --debug",
    "---tests---": "",
    "test": "jest --config ./jest.json",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --runInBand --config jest-e2e.json",
    "---npm---": "",
    "publish:next": "npm publish --access public --tag next",
    "prepublish:npm": "npm run build",
    "publish:npm": "npm publish --access public",
    "prerelease": "npm run build",
    "release": "release-it"
  }
}
